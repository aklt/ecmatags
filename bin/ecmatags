#!/usr/bin/env node

var et = require('../')
var opts = et.getOpts(process.argv.slice(2))

if (!opts) process.exit(0)

et.globFiles(opts, function (err, files) {
  if (err) return cb(err)
  et.tagFiles(files, opts, function (err, tags) {
    if (err) return (err)
    et.writeFile(tags, opts, cb)
  })
})

function cb (err) {
  if (err) throw err
}
